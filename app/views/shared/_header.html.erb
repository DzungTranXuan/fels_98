<div id="header">
  <div class="container">
    <div class="row">
      <div class="navbar-header clearfix">
        <%= link_to 'FELS', root_path, {class: 'navbar-brand'} %>
      </div>
      <nav class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t("label.categories"), categories_path %>
          </li>
          <li>
            <%= link_to t("label.words"), words_path %>
          </li>
          <li>
            <%= link_to t("label.users"), users_path %>
          </li>
          <% if user_signed_in? && current_user.is_admin %>
            <li>
              <%= link_to t("label.admin"), admin_home_index_path %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.present? %>
            <li>
              <%= link_to "#{image_tag current_user.avatar.url(:small), id: "avatar", class: "no-border"} #{current_user.get_name}".html_safe, current_user %>
            </li>
            <li>
              <%= link_to t("label.sign_out"), destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to t("label.sign_up"), new_user_registration_path %>
            </li>
            <li>
              <%= link_to t("label.sign_in"), new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
