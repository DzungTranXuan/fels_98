<div class="container">
  <% @categories.each_with_index do |category, index| %>
    <div class="row clearfix">
      <% if 0 == index % 2 %>
        <div class="col-xs-6">
          <%= render 'lesson_info', category: category %>
        </div>
        <div class="col-xs-6">
          <%= render 'lesson_image', category: category %>
        </div>
      <% else %>
        <div class="col-xs-6">
          <%= render 'lesson_image', category: category %>
        </div>
        <div class="col-xs-6">
          <%= render 'lesson_info', category: category %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= paginate @categories %>
</div>
