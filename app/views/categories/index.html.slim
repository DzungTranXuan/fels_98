- @categories.each_with_index do |category, index|
  div.row.clearfix
    - if 0 == index % 2
      div.col-md-6
        h2
          = category.name
        p
          = category.words.map { |word| word.text }.join(' ')
      div.col-md-6
        img.img-responsive src="/photos/categories/#{category.cover_photo}"
    - else
      div.col-md-6
        img.img-responsive src="/photos/categories/#{category.cover_photo}"
      div.col-md-6
        h2
          = category.name
        p
          = category.words.map { |word| word.text }.join(' ')

= paginate @categories
