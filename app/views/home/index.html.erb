<div id="home_index_view">
  <div class="container">
    <div class="row">
      <div id="userInfo" class="col-xs-4 col-sm-3 col-lg-2">
        <p class="text-center">
          <%= image_tag current_user.avatar.url(:med), class: "text-center" %>
        </p>
        <p class="text-center">
          <%= current_user.get_name %>
        </p>
        <p class="text-center">
          <%= t("label.learnt_n_words", n: current_user.get_number_of_words_learnt) %>
        </p>
      </div>

      <div id="dashBoard" class="col-xs-8 col-sm-9 col-lg-10">
        <div id="quickLinks">
          <%= link_to t("label.words"), words_path, id: "words", class: "btn btn-primary" %>
          <%= link_to t("label.categories"), categories_path, id: "categories", class: "btn btn-primary" %>
        </div>

        <div id="activities">
          <h4 id="title">
            <%= t("label.activities") %>
          </h4>
          <ul id="list" class="list-unstyled">
            <% current_user.get_following_activities.each do |activity| %>
              <li>
                <%= image_tag activity.user.avatar.url(:small), class: "circle" %>
                <%= link_to(activity.user.get_name, activity.user) %>
                <%= "#{activity.content} - (#{get_date activity.created_at})" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
